<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#22131ef1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.05">
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="DNA: 200"
                android:id="@+id/textView5"
                android:layout_gravity="left|bottom"
                android:gravity="left|bottom"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.3"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Main Menu"
                android:onClick="goMainMenu"
                android:id="@+id/textView23"
                android:layout_gravity="right"
                android:gravity="top|right"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textColor="#d670943f"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:layout_weight="0.54">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageButton"
                android:layout_gravity="center_horizontal|top"
                android:src="@drawable/nothing"
                android:scaleType="fitXY"
                android:onClick="goParty" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:layout_weight="0.10">
            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"/>
            <TextView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.6"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Cyanobacteria"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal|top"
                android:gravity="top|center_horizontal" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="Reset"
                android:id="@+id/button"
                android:layout_gravity="right|top"
                android:textSize="@dimen/notification_subtext_size"
                android:gravity="center"
                android:onClick="ResetEvo" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:layout_weight="0.32">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.333">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.12"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="DNA: -2"
                    android:id="@+id/textView6"
                    android:layout_gravity="left|bottom"
                    android:gravity="top|center"
                    android:layout_marginLeft="5dp" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.24"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Euglena"
                    android:id="@+id/textView2"
                    android:layout_gravity="left|center_vertical"
                    android:gravity="bottom|center_horizontal"
                    android:textSize="@dimen/abc_action_bar_content_inset_material"
                    android:layout_marginTop="4dp" />
                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.64"
                    android:id="@+id/imageButton2"
                    android:layout_gravity="left|bottom"
                    android:onClick="Generation2"
                    android:scaleType="fitXY"
                    android:src="@drawable/nothing" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.334">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.12"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="DNA: -2"
                    android:id="@+id/textView7"
                    android:layout_gravity="center_horizontal|bottom"
                    android:gravity="top|center"
                    android:layout_marginLeft="5dp" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.24"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Amoeba"
                    android:id="@+id/textView3"
                    android:layout_gravity="center"
                    android:gravity="bottom|center_horizontal"
                    android:textSize="@dimen/abc_action_bar_content_inset_material"
                    android:layout_marginTop="4dp" />
                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.64"
                    android:id="@+id/imageButton3"
                    android:layout_gravity="center_horizontal|bottom"
                    android:onClick="Generation3"
                    android:scaleType="fitXY"
                    android:src="@drawable/nothing" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.333">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.12"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="DNA: -2"
                    android:id="@+id/textView8"
                    android:layout_gravity="right|bottom"
                    android:gravity="top|center"
                    android:layout_marginLeft="5dp" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.24"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Tintinnids"
                    android:id="@+id/textView4"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="bottom|center_horizontal"
                    android:textSize="@dimen/abc_action_bar_content_inset_material"
                    android:layout_marginTop="4dp" />
                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.64"
                    android:id="@+id/imageButton4"
                    android:layout_gravity="right|bottom"
                    android:onClick="Generation4"
                    android:scaleType="fitXY"
                    android:src="@drawable/nothing" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
