<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hyin.evo3.Survival"
    android:background="#97096ede"
    android:id="@+id/RL4">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dip"
        android:id="@+id/f33">

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="0.08">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.25"
            android:text="Party"
            android:id="@+id/button12"
            android:onClick="goParty"
            android:textSize="@dimen/abc_edit_text_inset_top_material" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Select Level"
            android:id="@+id/textView30"
            android:textStyle="bold"
            android:gravity="center_horizontal" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.25"
            android:text="Survival"
            android:onClick="goSurvival"
            android:id="@+id/button13"
            android:visibility="invisible"
            android:textSize="@dimen/abc_edit_text_inset_top_material" />
    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.40">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:id = "@+id/imageViewEnvironment"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.40"
            android:id = "@+id/LLEnvironment">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.05"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.30">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="20dp"
                    android:layout_weight="0.05"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="#951079ff" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.25" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.5"
                        android:layout_gravity="center"
                        android:gravity = "center"
                        android:background="#951079ff"
                        android:padding="10dp"
                        android:src="@drawable/nothing"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.25" />

                </LinearLayout>

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="20dp"
                    android:layout_weight="0.05"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="#951079ff" />

                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:layout_gravity="center"
                    android:gravity = "center"
                    android:background="#951079ff"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/nothing" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="20dp"
                    android:layout_weight="0.05"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="#951079ff" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.25" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.5"
                        android:layout_gravity="center"
                        android:gravity = "center"
                        android:background="#951079ff"
                        android:padding="10dp"
                        android:src="@drawable/nothing"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.25" />

                </LinearLayout>

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="20dp"
                    android:layout_weight="0.05"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="#951079ff" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="0.05"
                android:text="Level 1: Ocean"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#81ffffff" />

        </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.03"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="5dp"
            android:layout_weight="0.50">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="0.04"
                android:text="Select your members fit for this level"
                android:layout_gravity="center"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:gravity="center"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.12">

                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:id = "@+id/imageViewMember1"
                    android:padding="2dp" />

                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:id = "@+id/imageViewMember2"
                    android:padding="2dp" />

                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:id = "@+id/imageViewMember3"
                    android:padding="2dp" />

                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:id = "@+id/imageViewMember4"
                    android:padding="2dp" />

                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:id = "@+id/imageViewMember5"
                    android:padding="2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.08">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:id = "@+id/textViewDes1"/>

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:id = "@+id/textViewDes2"/>

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:id = "@+id/textViewDes3"/>

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:id = "@+id/textViewDes4"/>

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:id = "@+id/textViewDes5"/>

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.14"></HorizontalScrollView>

            <Button
                android:layout_width="100dp"
                android:layout_height="0dip"
                android:layout_weight="0.08"
                android:layout_gravity="bottom|right"
                android:text="Continue"
                android:textSize="10dp" />

            </LinearLayout>

    </LinearLayout>

</RelativeLayout>
